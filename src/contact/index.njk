---
pagination:
    data: content
    size: 1
    alias: content
layout: layouts/base.njk
permalink: '/contact/'
eleventyComputed:
  title: '{{ contact.pageHeader.title }}'
  description: '{{ contact.meta.description }}'
---

{% module "header", {
  navigation: mainNav,
  permalink: 'contact'
} %}

<article class="text-page login-page">
  {% module 'page-header-simple', {
    title: contact.pageHeader.title,
    text: contact.pageHeader.text
  } %}

  <section class="text-page__content">
    {% set asHTML = contact.content.text | markdown | safe %}
    {% wysiwyg asHTML, {
      quotes: quotes,
      timeline: timeline,
      content: content,
      pjotr: pjotr,
      getAcquaintedOnContact: true,
      getAcquainted: getAcquainted,
      getAcquaintedSingleButton: getAcquaintedSingleButton,
      pagesPreview: pagesPreview
    } %}
  </section>

  <section class="contact__widget">
    <!-- Calendly inline widget begin -->
      <div class="calendly-inline-widget" data-url="https://calendly.com/pjotr-peulen/videobellen?hide_event_type_details=1&hide_gdpr_banner=1&primary_color=eb5c36" style="min-width:320px;height:656px;"></div>
      <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
    <!-- Calendly inline widget end -->
  </section>

</article>

{% part 'calandy-kennismaking' %}

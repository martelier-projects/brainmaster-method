---
pagination:
  data: content
  size: 1
  alias: content
layout: layouts/base.njk
permalink: '/zorg/'
eleventyComputed:
  title: '{{ forCaregivers.meta.title }}'
  description: '{{ forCaregivers.meta.description }}'
---

{% module "header", {
  navigation: mainNav,
  permalink: 'zorg'
} %}

<article class="text-page">
  {% module 'page-header-simple', {
    title: forCaregivers.pageHeader.title,
    text: forCaregivers.pageHeader.text
  } %}

  {% inPageNav {
    content: forCaregivers.content.text | markdown | safe,
    sections: forCaregivers.flexibleContent.sections
  } %}

  <section class="text-page__content">
    {% set asHTML = forCaregivers.content.text | markdown | safe %}
    {% wysiwyg asHTML, {
      quotes: quotes,
      timeline: timeline,
      content: content,
      pjotr: pjotr,
      topics: topics.forCaregivers.topics,
      faq: faq.forCaregivers,
      getAcquainted: getAcquainted,
      getAcquaintedSingleButton: getAcquaintedSingleButton,
      pagesPreview: pagesPreview
    } %}
  </section>

  {% module 'flexible-content', {
    sections: forCaregivers.flexibleContent.sections
  } %}

</article>

{% part 'calandy-kennismaking' %}

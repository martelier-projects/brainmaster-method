      timeline: timeline,
      content: content,
      pjotr: pjotr,
      topics: topics.forCompanies.topics,
      faq: faq.faqCompanies,
      getAcquainted: getAcquainted,
      pagesPreview: pagesPreview
    } %}
  </section>

</article>

<section class="text-media">
  {% if title %}
    <h2 class="text-media__title">{{ title }}</h2>
  {% endif %}

   {% if imgSrc %}
    <figure class="text-media__img-container">
      <img class="text-media__img" src="{{ imgSrc }}" alt="{{ imgAlt }}">

      {% if imgCaption %}
        <figcaption class="text-media__caption">{{ imgCaption }}</figcaption>
      {% endif %}
    </figure>
  {% endif %}

  {% if sections %}
    <div class="text-media__text-container">
      {% for section in sections %}
        <h3 class="text-media__section-title">{{ section.title }}</h3>
        <p class="text-media__section-text">{{ section.text }}</p>
      {% endfor %}
    </div>
  {% endif %}
</section>

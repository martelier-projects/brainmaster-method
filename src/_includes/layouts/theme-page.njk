---
pagination:
  data: content
  size: 2
  alias: content
layout: layouts/base.njk
eleventyComputed:
  title: '{{ title }}'
  description: '{{ description }}'
---

{% module "header", {
  navigation: mainNav,
  permalink: '{{ permalink }}'

} %}

<article class="text-page">
   {% module 'page-header', {
    title: title,
    text: header.text,
    links: header.links,
    illustration: header.illustration
  } %}

  {% module 'flexible-content', {
    sections: sections
  } %}
</article>

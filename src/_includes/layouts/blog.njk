---
pagination:
  data: content
  size: 2
  alias: content
layout: layouts/base.njk
---

<article class="blog">
  {% module 'page-header-simple', {
    empty: true
  } %}

  <script> console.log('{{ blog | dump | safe }}')</script>
  <script> console.log('{{ pagination | dump | safe }}')</script>
  <script> console.log('{{ pagination.href | dump | safe }}')</script>

  <section class="blog__content">
    <h1 class="blog__title">{{ title }}</h1>
    {{ content | safe }}
  </section>
</article>

<section class="colored-block">
  <div class="colored-block__inner">
    <h2 class="page__title">Meer lezen?</h2>
    {% module 'blog-preview-list', {
      posts: collections.blog | reverse,
      smallPreview: true
    } %}
  </div>
</section>
